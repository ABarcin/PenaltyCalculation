@model PublicHolidayModel
@{
    ViewData["Title"] = "Public Holiday";
}

<form asp-action="Holiday">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group row">
                <div class="col-lg-3">
                    @Html.LabelFor(m => m.SelectedCountryId)
                </div>
                <div class="col-lg-9">
                    <select asp-for="SelectedCountryId" class="form-control">
                        @foreach (var item in Model.Countries)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">

                    <input type="submit" value="Find" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>
