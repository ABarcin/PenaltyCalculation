@model CalculationModel
@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="CalculatePenalty">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group row">
                <div class="col-lg-3">
                    @Html.LabelFor(m => m.CheckedOutDate)
                </div>
                <div class="col-lg-9">
                    <input asp-for="CheckedOutDate" class="form-control"/>
                    <span asp-validation-for="CheckedOutDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-3">
                    @Html.LabelFor(m => m.ReturnedDate)
                </div>
                <div class="col-lg-9">
                    <input asp-for="ReturnedDate" class="form-control" />
                    <span asp-validation-for="ReturnedDate" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group row">
                <div class="col-lg-3">
                    @Html.LabelFor(m => m.SelectedCountryId)
                </div>
                <div class="col-lg-9">
                    <select asp-for="SelectedCountryId" class="form-control">
                        @foreach (var item in Model.Countries)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-12">

                    <input type="submit" value="Calculate" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>